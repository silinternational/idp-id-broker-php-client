    "behat/behat": "^3.3"
  },
  "authors": [
    {
      "name": "Phillip Shipley",
      "email": "phillip_shipley@sil.org"
    },
    {
      "name": "Matt Henderson",
      "email": "matt_henderson@sil.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "Sil\\Idp\\IdBroker\\Client\\": "src/",
      "Sil\\Idp\\IdBroker\\Client\\features\\": "features/",
      "Sil\\Idp\\IdBroker\\Client\\tests\\": "tests/"
    }
  }
}
